<%- include('./partials/head');%>
<%- include('./partials/header'); %>
  <main class="container">
    
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/images/carousel-1.jpeg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/images/carousel-2.jpeg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/images/tabuaDeFrios.jpeg" class="d-block w-100" alt="...">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden"></span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden"></span>
    </a>
  </div>
    <section class="receitas" id="receitas">
      <h2>Receitas</h2>
      <p>Receitas de pratos e bebidas, dicas para uma melhor harmonização!</p>
    
    <div class="card-deck">              
      <% cards.forEach(card => { %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="card w-100">
            <img src="<%= card.caminho_de_imagem %> " class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= card.titulo %> </h5>
              <p class="card-text"><%= card.texto %> </p>
              <a href="#" class="btn btn-primary">Ver mais</a>
            </div>
          </div>
        </div>
      <% }) %>      
    </div>        
    </section>

    <section class="localização mt-5">
      <h2>Localização</h2>
      <p>Localização</p>
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d470398.2155276501!2d-43.72617463374161!3d-22.91388505077195!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9bde559108a05b%3A0x50dc426c672fd24e!2sRio%20de%20Janeiro%2C%20RJ!5e0!3m2!1spt-BR!2sbr!4v1607452823401!5m2!1spt-BR!2sbr"
        width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false"
        tabindex="0"></iframe>
    </section>
    <section class="formulario mt-5">
      <h2>Envie suas receitas</h2>
      <p>Preencha o formulário abaixo para enviar sua receita</p>
      <form action="/recipes/save" method="POST">
        <div class="row">
          <div class="col">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome" aria-label="First name">
          </div>
          <div class="col">
            <label for="email">Email</label>
            <input type="text" class="form-control" name="Email" id="email" placeholder="E-mail" aria-label="E-mail">
          </div>             
        </div>   
        <div class="row">
          <div class="col my-3">
            <label for="email">Sua receita aqui...</label>
            <textarea type="form-control" class="form-control" name="mensagem" id="mensagem" rows="10" placeholder="Escreva sua receita aqui" aria-label="Sua receita aqui">
            </textarea>
          </div>  
        </div>
          <button class="submit" class="btn btn-primary">Enviar</button>
        
      </form>
    </section>
  </main>
 <%- include('./partials/footer'); %>
</body>

</html>